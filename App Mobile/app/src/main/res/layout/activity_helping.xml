<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simpleTableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_background2"
    android:stretchColumns="1"> <!-- stretch the second column of the layout-->


    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationX="110sp"
        android:translationY="50sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Instructions"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:translationX="-30sp"
        android:translationY="50sp">

        <!-- first element of the row-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:src="@drawable/ic_upward" />

        <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Move Forward"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:translationX="-30sp"
        android:translationY="50sp">

        <!-- first element of the row-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:src="@drawable/ic_backward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Move Backward"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:translationX="-30sp"
        android:translationY="50sp">

        <!-- first element of the row-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:src="@drawable/ic_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Move Right"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:translationX="-30sp"
        android:translationY="50sp">

        <!-- first element of the row-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Move Left"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:translationX="-30sp"
        android:translationY="50sp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:src="@drawable/ic_baseline_exit_to_app_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Exit"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:translationX="-30sp"
        android:translationY="50sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:src="@drawable/ic_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Open Instructions"
            android:textColor="#FFF"
            android:textSize="24dp" />

    </TableRow>
</TableLayout>